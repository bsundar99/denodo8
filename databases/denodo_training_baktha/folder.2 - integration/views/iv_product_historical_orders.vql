CREATE OR REPLACE VIEW iv_product_historical_orders FOLDER = '/2 - integration' AS SELECT iv_historical_orders.status AS status, count(bv_product.productprice) AS amount, bv_product.productname AS productname FROM iv_historical_orders AS iv_historical_orders INNER JOIN bv_product AS bv_product ON iv_historical_orders.product_id = bv_product.productid  GROUP BY iv_historical_orders.status, bv_product.productname, bv_product.productprice ORDER BY status ASC CONTEXT (DATAMOVEMENTPLAN = bv_product : JDBC ds_historical_orders, 'formatted' = 'yes');

